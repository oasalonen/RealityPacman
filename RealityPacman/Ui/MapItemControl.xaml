<UserControl x:Class="RealityPacman.MapItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="40" d:DesignWidth="40">
    
    <Canvas x:Name="LayoutRoot" Width="40" Height="40"
            my:MapLayer.Position="{Binding Position}"
            my:MapLayer.PositionOrigin="Center">
        <Canvas.Clip>
            <RectangleGeometry Rect="0,0,40,40" />
        </Canvas.Clip>
        <Image x:Name="image" Source="/RealityPacman;component/Images/fruit.png" />
    </Canvas>
</UserControl>
