<UserControl x:Class="RealityPacman.GhostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="64" d:DesignWidth="64">
    
    <Canvas x:Name="LayoutRoot" Width="64" Height="64" my:MapLayer.Position="{Binding Position}">
        <Canvas.Clip>
            <RectangleGeometry Rect="0,0,64,64"/>
        </Canvas.Clip>
        <Image x:Name="sprite" Source="/RealityPacman;component/ghost_anim_row-01.png" />        
        <Image x:Name="eyes" Source="/RealityPacman;component/eyes.png" 
               Canvas.Left="{Binding EyeX}"
               Canvas.Top="{Binding EyeY}"
               />
    </Canvas>
</UserControl>
